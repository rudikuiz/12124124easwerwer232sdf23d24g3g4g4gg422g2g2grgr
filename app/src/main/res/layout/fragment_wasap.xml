<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/begron2"
    tools:context="com.piramidsoft.wablastadmin.FragmentWasap">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:paddingTop="70dp"
        android:src="@drawable/polisi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/pengirim"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telkomsel"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etNomor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_text"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xl"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etNomorXL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_text"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/indosat"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etNomorIsat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_text"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/frekuensi"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingLeft="5dp">

                <RadioGroup
                    android:id="@+id/rbFreq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"
                        android:checked="true"
                        android:text="Auto"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:theme="@style/MyRadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="1800 MHz"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:theme="@style/MyRadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="2100 MHz"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:theme="@style/MyRadioButtonStyle" />

                </RadioGroup>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/teks"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etText"
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:background="@drawable/border_text"
                android:gravity="top|left"
                android:hint="@string/teks"
                android:inputType="textMultiLine|textNoSuggestions"
                android:minLines="10"
                android:padding="5dp" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="500dp"
                android:layout_height="40sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple_green"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/blast"
                android:textColor="@color/white" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btPhoto"
                    android:layout_width="100dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ripple_red"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/photo"
                    android:textColor="@android:color/holo_red_dark" />


                <Button
                    android:layout_marginLeft="20dp"
                    android:id="@+id/btClear"
                    android:layout_width="380dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ripple_red"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/clear"
                    android:textColor="@android:color/holo_red_dark" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="100dp">

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
